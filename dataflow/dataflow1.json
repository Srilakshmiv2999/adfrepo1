{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "sourceds1",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "destds1",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "dervcolum1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          FirsName as string,",
				"          LastName as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 derive(FirsName = concat(FirsName,LastName),",
				"          column1 = ERROR_FUNCTION('')) ~> dervcolum1",
				"dervcolum1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          FullName as string",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          FullName = FirsName",
				"     )) ~> sink1"
			]
		}
	}
}